<p id="notice"><%= notice %></p>

<h1>Genre Games</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genre_games.each do |genre_game| %>
      <tr>
        <td><%= genre_game.game %></td>
        <td><%= genre_game.genre %></td>
        <td><%= link_to 'Show', genre_game %></td>
        <td><%= link_to 'Edit', edit_genre_game_path(genre_game) %></td>
        <td><%= link_to 'Destroy', genre_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

